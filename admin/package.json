{
  "name": "biff-cross-photography-admin",
  "private": true,
  "version": "0.0.0",

  "main": "dist-electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite --port 8080",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --port 8080",
    "test": "vitest --run",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:8080 && electron .\"",
    "electron:build": "node scripts/build-electron.js",
    "electron:dist": "node scripts/build-electron.js --publish=never"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.954.0",
    "@aws-sdk/lib-storage": "^3.954.0",
    "dotenv": "^16.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.biffcross.admin",
    "productName": "Biff Cross Photography Admin",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.photography"
    },
    "dmg": {
      "title": "Biff Cross Photography Admin"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
